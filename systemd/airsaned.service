[Unit]
Description=AirSane Imaging Service
After=avahi-daemon.service

[Service]
EnvironmentFile=-/etc/default/airsane
ExecStart=/usr/local/bin/airsaned --interface=${INTERFACE} --listen-port=${LISTEN_PORT} --access-log=${ACCESS_LOG} --hotplug=${HOTPLUG} --mdns-announce=${MDNS_ANNOUNCE} --web-interface=${WEB_INTERFACE} --local-scanners-only=${LOCAL_SCANNERS_ONLY} --options-file=${OPTIONS_FILE} --ignore-list=${IGNORE_LIST}
ExecReload=/bin/kill -HUP $MAINPID
User=saned
Group=saned
Type=simple

[Install]
WantedBy=multi-user.target
Alias=airsaned.service
